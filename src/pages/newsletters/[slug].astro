---
import { getCollection } from "astro:content";
import SiteLayout from "@/layouts/SiteLayout.astro";

export async function getStaticPaths() {
  const items = await getCollection("newsletters");
  if (!items.length) return [];
  return items.map((item) => ({
    params: { slug: item.slug },
    props: { item },
  }));
}

const { item } = Astro.props;
if (!item) {
  throw new Error("Newsletter not found");
}
const { Content } = await item.render();
---

<SiteLayout title={item.data.title ?? item.slug}>
  <article class="prose dark:prose-invert mx-auto">
    <h2 class="text-xs uppercase">The weekly Vivarium for Week {item.data.week}</h2>
    <h1>{item.data.title ?? item.slug}</h1>
    {item.data.date && <p class="text-sm">{item.data.date}</p>}
    <Content />
  </article>
</SiteLayout>
